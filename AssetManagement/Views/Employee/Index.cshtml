@model IEnumerable<AssetManagement.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Employee</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BadgeNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BadgeNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-badgeNo="@item.BadgeNo">Edit</a> |
                <a asp-action="Details" asp-route-badgeNo="@item.BadgeNo">Details</a> |
                <a asp-action="Delete" asp-route-badgeNo="@item.BadgeNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
