@model AssetManagement.Models.Extension

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Extension</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usage" class="control-label"></label>
                <select id="usage" onchange="showUser()" asp-for="Usage" asp-items="Html.GetEnumSelectList<ExtensionUsage>()" class="form-control"></select>
                <span asp-validation-for="Usage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Employee</label>
                <select id="employeeList" asp-for="EmployeeBadgeNo" class="form-control" asp-items="ViewBag.BadgeNo"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



    <script>
        $(document).ready(function () {
            showUser();
        });
        function showUser() {
            var usage = $("#usage").val();
            var employeeList = $("#employeeList");
            console.log(usage);
            if (usage != 0) {
                employeeList.prop("disabled", true);

            } else {
                employeeList.prop("disabled", false);
            }
        }
    </script>
}