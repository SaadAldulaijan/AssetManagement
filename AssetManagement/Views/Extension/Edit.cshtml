@model AssetManagement.Models.Extension

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Extension</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usage" class="control-label"></label>
                <select id="usage" onchange="showUser()" asp-for="Usage" asp-items="Html.GetEnumSelectList<ExtensionUsage>()" class="form-control"></select>
                <span asp-validation-for="Usage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Employee</label>
                <select id="employeeList" asp-for="EmployeeBadgeNo" class="form-control" asp-items="ViewBag.BadgeNo"></select>
                <span asp-validation-for="EmployeeBadgeNo" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Number" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


<script>
    $(document).ready(function () {
        showUser();
    });
    function showUser() {
        var usage = $("#usage").val();
        var employeeList = $("#employeeList");
        if (usage != 0) {
            employeeList.prop("disabled", true);

        } else {
            employeeList.prop("disabled", false);
        }
    }
</script>
}
