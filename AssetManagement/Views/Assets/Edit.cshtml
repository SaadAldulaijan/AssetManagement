@model AssetManagement.Models.Asset

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Asset</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TelephoneSerialNo" />
            <input type="hidden" asp-for="ExtensionNumber" />
            <div class="form-group">
                <label asp-for="TelephoneSerialNo" class="control-label">Telephone</label>
                <select asp-for="TelephoneSerialNo" class="form-control" asp-items="ViewBag.SerialNo"></select>
                <span asp-validation-for="TelephoneSerialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtensionNumber" class="control-label">Extension</label>
                <select asp-for="ExtensionNumber" class="form-control" asp-items="ViewBag.Number"></select>
                <span asp-validation-for="ExtensionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
