@model AssetManagement.Models.Telephone

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Telephone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">MAC:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MAC)
        </dd>
        <dt class="col-sm-2">SN:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNo)
        </dd>
        <dt class="col-sm-2">TAG:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">Is Defective</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.ToString())
        </dd>
        <dt class="col-sm-2">Remark:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remark)
        </dd>
        <dt class="col-sm-2">Brand:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubCategory.Category.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SerialNo" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
