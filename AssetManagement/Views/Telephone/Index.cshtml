@model IEnumerable<AssetManagement.Models.Telephone>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Telephones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<nav>
    <div class="nav nav-tabs nav-justified" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-all-tab" data-toggle="tab" href="#nav-all" role="tab" aria-controls="nav-all" aria-selected="true">Used</a>
        <a class="nav-item nav-link" id="nav-Stock-tab" data-toggle="tab" href="#nav-Stock" role="tab" aria-controls="nav-Stock" aria-selected="false">Stock</a>
        <a class="nav-item nav-link" id="nav-faulty-tab" data-toggle="tab" href="#nav-faulty" role="tab" aria-controls="nav-faulty" aria-selected="false">Faulty</a>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-all" role="tabpanel" aria-labelledby="nav-all-tab">
        <br />
        <table class="table table-bordered" id="dataTable">
            <thead>
                <tr>
                    <th>MAC</th>
                    <th>Serial No</th>
                    <th>Tag</th>
                    <th>Remark</th>
                    <th>Model</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Status == Status.Used)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MAC)</td>
                            <td>@Html.DisplayFor(modelItem => item.SerialNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tag)</td>
                            <td>@Html.DisplayFor(modelItem => item.Remark)</td>
                            <td>@Html.DisplayFor(modelItem => item.SubCategory.Name)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Disposal</a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="nav-Stock" role="tabpanel" aria-labelledby="nav-Stock-tab">
        <br />
        <table class="table table-bordered" id="dataTable-2">
            <thead>
                <tr>
                    <th>MAC</th>
                    <th>Serial No</th>
                    <th>Tag</th>
                    <th>Remark</th>
                    <th>Model</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Status == Status.Stock)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MAC)</td>
                            <td>@Html.DisplayFor(modelItem => item.SerialNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tag)</td>
                            <td>@Html.DisplayFor(modelItem => item.Remark)</td>
                            <td>@Html.DisplayFor(modelItem => item.SubCategory.Name)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Disposal</a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="nav-faulty" role="tabpanel" aria-labelledby="nav-faulty-tab">
        <br />
        <table class="table table-bordered" id="dataTable-3">
            <thead>
                <tr>
                    <th>MAC</th>
                    <th>Serial No</th>
                    <th>Tag</th>
                    <th>Remark</th>
                    <th>Model</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Status == Status.Faulty)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.MAC)</td>
                            <td>@Html.DisplayFor(modelItem => item.SerialNo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tag)</td>
                            <td>@Html.DisplayFor(modelItem => item.Remark)</td>
                            <td>@Html.DisplayFor(modelItem => item.SubCategory.Name)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Disposal</a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#dataTable-2").DataTable();
            $("#dataTable-3").DataTable();
        });
    </script>
}
